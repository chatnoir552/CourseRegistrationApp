 <nav></nav>
 <main>
  <p id="login">ログイン</p>
  <div class="login_form">
   <% if flash[:notice] == "ログインもしくはサインアップが必要です"%>
     <p id="login_flash"><%= flash[:notice] %></p>
   <% end %>
    <% if flash[:notice] == "ログアウトしました"%>
     <p id="logout_flash"><%= flash[:notice] %></p>
   <% end %>
      <p id="login_flash_error"><%= flash.now[:error] %></p>
    <%= form_with(url: login_path, scope: :session, local: true, data: { turbo: false }) do |f| %>
     <div class="name">
       <%= f.label :name, "名前" %>
       <%= f.text_field :name %>
     </div>
     <div class="password">
       <%= f.label :password, "パスワード" %>
       <%= f.password_field :password %>
     </div>
     <div class="submit">
       <%= f.submit 'ログイン'%>
      </div>
    <% end %>
  </div> 
 </main>
 <aside></aside>
